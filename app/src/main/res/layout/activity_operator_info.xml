<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/CardView_Base_Theme"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp">

        <TextView
            style="@style/TextView_Left_Style"
            android:text="区域" />

        <TextView
            android:id="@+id/tv_operator_area"
            style="@style/TextView_Right_Style"
            android:text="浙江省" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardView_Base_Theme"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp">

        <TextView
            style="@style/TextView_Left_Style"
            android:text="站点" />

        <TextView
            android:id="@+id/tv_operator_station"
            style="@style/TextView_Right_Style"
            android:text="杭州市" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardView_Base_Theme"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp">

        <TextView
            style="@style/TextView_Left_Style"
            android:text="账号" />

        <TextView
            android:id="@+id/tv_operator_account"
            style="@style/TextView_Right_Style"
            android:text="1234554321" />
    </android.support.v7.widget.CardView>

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_shape"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="退出登录"/>
</LinearLayout>