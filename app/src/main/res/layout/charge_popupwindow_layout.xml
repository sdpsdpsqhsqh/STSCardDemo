<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back_popup"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:src="@drawable/wrong"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="选择付款方式"
            android:textColor="#323232"
            android:textSize="22sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#25323232"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:id="@+id/ll_recharge_yinlian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pay_icon_yinlian"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/yinlian" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pay_name_yinlian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="中国银联"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_pay_introduce_yinlian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="尾号0000"
                android:textColor="@color/colorTextColor"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:clickable="false"
            android:id="@+id/iv_enter_recharge_yinlian"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="10dp"
            android:src="@drawable/right" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_margin="5dp"
        android:background="#25323232"/>
    <LinearLayout
        android:id="@+id/ll_recharge__zhifubao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:clickable="false"
            android:id="@+id/iv_pay_icon_zhifubao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/zhifubao" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pay_name_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_pay_introduce_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="当前月10000元"
                android:textColor="@color/colorTextColor"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_enter_recharge_zhifubao"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="10dp"
            android:src="@drawable/right" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_margin="5dp"
        android:background="#25323232"/>
    <LinearLayout
        android:id="@+id/ll_recharge_btn_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:clickable="false"
            android:id="@+id/iv_pay_icon_weixin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/weixin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pay_name_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_pay_introduce_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="当前余额300元"
                android:textColor="@color/colorTextColor"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_enter_recharge_weixin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/right" />
    </LinearLayout>
</LinearLayout>